@model Student
@{
    ViewData["Title"] = "AddStudent";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/StyleForStudentForm.css" />
   
    <script src="~/js/Validations.js" asp-append-version="true"></script>
    <!-- Use relative path instead of absolute -->
    <style>
        .error-icon {
            display: none;
            color: red;
            margin-left: 5px;
        }

        .error-message {
            color: red;
            font-size: 0.9em;
        }
    </style>
</head>

<body>
<h1 style="text-align:center; color:blue">Add New Student</h1>

    <form asp-action="AddStudent" method="post" id="studentForm">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" id="Name" />
        <span class="error-icon" id="nameErrorIcon">&#9888;</span> <!-- Error icon -->
        <span class="error-message" id="nameError"></span> <!-- Error message -->
    </div>

    <div class="form-group">
        <label asp-for="Dateofbirth"></label>
        <input asp-for="Dateofbirth" type="date" class="form-control" id="Dateofbirth" />
        <span class="error-icon" id="dobErrorIcon">&#9888;</span>
        <span class="error-message" id="dobError"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" id="Email" />
        <span class="error-icon" id="emailErrorIcon">&#9888;</span>
        <span class="error-message" id="emailError"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="subjects">Select Subjects (up to 2)</label>
        <div>
            @foreach (var subject in ViewBag.Subjects as IEnumerable<Subject>)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input"
                           id="subject_@subject.Id"
                               name="selectedsubj"
                           value="@subject.Id" />
                    <label class="form-check-label" for="subject_@subject.Id">
                        @subject.Name
                    </label>
                </div>
            }
        </div>
        <span class="error-icon" id="subjectsErrorIcon">&#9888;</span>
        <span class="error-message" id="subjectsError"></span>
    </div>

        <button type="submit" asp-action="AddStudent" class="btn btn-primary"> Add Student </button>
</form>
</body>
</html>



